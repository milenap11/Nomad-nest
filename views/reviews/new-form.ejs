<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Create a Review | Nomad Nest'}) %>
    <link rel="stylesheet" href="/styles/destination-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>Write a Review</h2>
        <h4><i>You're reviewing <a href="/destinations/<%= destination._id %>"><%= destination.name %></a></i></h4>
    </section>

    <form action="/reviews/create/<%= destination._id %>" method="POST">
        <label for="reviewer">Reviewer Name:</label><br>
        <input type="text" id="reviewer" name="reviewer" required><br>

        <label for="title">Review Headline:</label><br>
        <input type="title" id="title" name="title" required><br>

        <label for="content">Comments:</label><br>
        <textarea id="reasonForAdoption" name="reasonForAdoption" required></textarea><br>

        <input type="submit" value="Submit">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
