<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `Edit ${destination.name} | Nomad Nest`}) %>
    <link rel="stylesheet" href="/styles/destination-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero edit">
        <h2>Edit a Destination</h2>
        <h4><i>Helping you find your home away from home</i></h4>
    </section>

    <form method="POST" action="/destinations/<%= destination._id %>?_method=PUT">
        <!-- Name input -->
        <label for="name">City, Country:</label>
        <input type="text" id="name" name="name" value="<%= destination.name %>" required>
        <br>
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= destination.photo %>" required>
        <br>
         <!-- Cost input -->
         <label for="averageCost">Average Monthly Cost:</label>
         <input type="text" id="averageCost" name="averageCost" value="<%= destination.averageCost %>" required>
         <br>
         <!-- Visa input -->
         <label for="visa">Visa Requirement:</label>
         <input type="text" id="visa" name="visa" value="<%= destination.visa %>" required>
         <br>
         <!-- Description input -->
         <label for="description">Description:</label>
         <textarea id="description" name="description" required><%= destination.description %></textarea>
         <br>
       
        <input type="submit" value="Edit Destination">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
