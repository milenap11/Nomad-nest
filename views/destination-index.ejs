<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Nomad Nest'}) %>
    <link rel="stylesheet" href="/styles/destination-index.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <main>
        <section class="listings">
            <ul>
                <% for (let destination of destinations) { %>
                <li>
                    <figure>
                        <img src="<%= destination.photo %>">
                        <figcaption>
                            <h4><%= destination.name %></h4>
                            <p><span style="color: #939393">Average Monthly Cost:</span> <%= destination.averageCost %></p>
                            <p><span style="color: #939393">Visa Requirement:</span> <%= destination.visa %></p>
                            <a href="/destinations/<%= destination._id %>">Explore</a>
                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
